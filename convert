#!/bin/sh
set -e
set -u

function cleanExit()
{
  exit 2
  rm $TMP_AUDIO
  rm $TMP_SPED
  rm $TMP_SHIFTED
  exit $1
}

if [ $# != 1 ]; then
  echo missing input >&2
  exit 1
fi

TMP_AUDIO=audio.wav
TMP_SPED=sped.wav
TMP_SHIFTED=shifted.wav

OUTPUT=`echo -n $1 | sed 's/\(.*\)\.\(.*\)/\1/g'`.mp4
mplayer $1 -novideo -ao pcm:file=$TMP_AUDIO || cleanExit 1
speed 1001/960 $TMP_AUDIO $TMP_SPED || cleanExit 1
sox -S $TMP_SPED $TMP_SHIFTED pitch -72.4 || cleanExit 1

mplayer -nosound -benchmark -really-quiet -vo yuv4mpeg:file=/dev/stdout $1 | \
yuvfps -r 25:1 -c 1 2> /dev/null | \
ffmpeg -loglevel info -y -i - -qscale 4 $OUTPUT

cleanExit 0
